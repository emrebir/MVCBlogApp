@model IEnumerable<MVCBlogApplication.Models.BlogModel>


@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-info-sign"></span>
        <h3>Kayıt Bulunamadı</h3>
    </div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">@blog.Baslik</h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @blog.EklenmeTarihi
            </p>
            <hr />
            <img class="img-responsive" src="@blog.Resim" />
            <hr />
            <p>
                @blog.Aciklama
            </p>
            @Html.ActionLink("Daha Fazla...", "Details", "Blog", new { id = @blog.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}



