@model IEnumerable<MVCBlogApplication.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>
<hr />

<p>
    @Html.ActionLink("Kategori Ekle", "Create",null, new {@class="btn btn-primary"})
</p>
<hr />

@if (TempData["Kategori"]!=null)
{
    var kategori = (MVCBlogApplication.Models.Category)TempData["Kategori"];

    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok"></span> 
        <strong>@kategori.KategoriAdi</strong> Kayıt Edildi.
    </div>
}


<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:70%;">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th style="width:16%";>
            @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th style="width:160px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogSayisi)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
